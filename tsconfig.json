{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "src",
      "jsx": "react",
      "lib": ["ES2020", "DOM"],
      "module": "ES2020",
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "outDir": "./dist/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "ES2020"
  },
  "include": [
      "./src/**/*"
  ]
}
